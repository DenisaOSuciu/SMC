<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/question1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:fontFamily="@font/adamina"
        android:text="Cum functioneaza aplicatia noastra?"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.115" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:fontFamily="@font/adamina"
        android:text="  Dupa creearea contului, poti naviga printre produsele puse la vanzare de alti utilizatori ai aplicatiei. In cazul in care gasiti unul sau mai multe articole care se potrivesc gusturilor dumneavoastra, aveti optiunea de a-l adauga in cos. Dupa ce produsele dorite sunt adaugate in cos, mai ramane un singur pas, acela de a finaliza comanda. "
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>