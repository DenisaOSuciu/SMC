        <activity
            android:name=".activities.ReceivedOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.UsersDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MyProductActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProductPageActivity"
            android:exported="false" />
        <activity
